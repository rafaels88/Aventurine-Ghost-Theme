{{!< default}}

{{#post}}

<section id="main" class="container">
  <div class="row uniform">
    <article class="{{post_class}} single 12u 12u$(3) important(3)">
      <div class="post-container">
        <header class="post-header">
          <h1 class="post-title {{#if featured}}post-featured{{/if}}"><a href="{{url}}">{{title}}</a></h1>
          <p class="post-meta">
            por {{author}} em <time class="blog-date" datetime="{{date format='MMMM DD, YYYY'}}">{{date format="DD/MM/YYYY"}}</time>
            - <a class="disqus-comment-count" href="{{url absolute='true'}}#disqus_thread"></a>
            <div class="fb-like" data-href="{{url absolute='true'}}" data-layout="button_count" data-action="like" data-share="true"></div>
          </p>
          {{#if image}}<a href="{{url}}" class="feature-image"><img src="{{image}}" /></a>{{/if}}
        </header>
        <section class="post-content">{{content}}</section>
      </div>
      <div class="comment-area">
          {{>comment-box}}
      </div>
    </article>
  </div>
</section>
{{/post}}
